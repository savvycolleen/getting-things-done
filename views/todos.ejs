<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/header') -%>
    <title>To-Do-List</title>
</head>
<body>


    <nav class="navbar navbar-expand-sm bg-primary navbar-dark">
        <div class="container-fluid">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="#">My List</a>
            </li>
            <li class="nav-item"></li>
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </div>
            </div>
          </ul>
        </div>
      </nav>
      <div class="container-fluid">
        <div class="row"> 
            <div class="card text-bg-light mx-auto mt-5 col-8 col-md-3">
              <h1 class="display-2">To-Do</h1>
                <div class="card mb-3">
                  <ul class="list-group list-group-flush">
                  <% todos.forEach( el => { %>
                    <li class="list-group-item todoItem" data-id='<%=el._id%>'>
                      <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
                      <svg xmlns="http://www.w3.org/2000/svg" class="del" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"/>
                      </svg>
                    </li>
                  <% }) %> 
                  </ul>
                </div>

                <p class="lead"><%= user.userName %> has <%= left %> things left to do.</p>

                <form action="/todos/createTodo" method='POST'>
                  <label class="form-label" for="todoItem">Add New Item</label>
                  <input class="form-control" type="text" placeholder="" name='todoItem'>
                    <div class="d-flex justify-content-end">
                      <input type="submit" class="btn btn-dark mt-3 mb-3">
                    </div>
                </form>
              </div>
        </div>
      </div>
      



    <%- include('partials/footer') -%>
    <script src="js/main.js"></script>
    
</body>
</html>